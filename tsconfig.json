{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "declaration": true,
      "declarationMap": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noEmit": true,
      "lib": ["es2020"],
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "useDefineForClassFields": true,
      "useUnknownInCatchVariables": false,
      "baseUrl": ".",
      "skipLibCheck": true,
      "strict": true,
      "target": "ES2020",
      "sourceMap": true,
      "allowJs": true,
      "checkJs": true,
      "outDir": "./dist"
    },
      "include": [
      "**/*.ts"
    ],
      "exclude": [
      "node_modules",
      "dist",
      "test"
    ]
  }